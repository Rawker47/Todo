        <%for(var i=0;i<newListItems.length;i++){%>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%=newListItems[i].name%>
                </p>
            </div>
            <%}%> -->
                <form class="item" action="/" method="post">
                    <input type="text" name="addList" placeholder="Add Items" autocomplete="off">
                    <button type="submit" name="list" value=<%=listTitle%>>+</button>
                </form>
    </div>

    <footer>Copyright 2024 Raskin Production</footer>
</body>

</html>